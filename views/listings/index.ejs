<%- layout('./layout/boilerplate.ejs') %>

<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-blue-600 mb-6">View, search & manage travel spots</h1>

        <!-- Create New Listing Button -->
        <form action="/listings/new" method="get" class="mb-6">
            <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500 transition-colors">
                Create New Listing
            </button>
        </form>

        <!-- Listings Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% for (let list of alllisting) { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
                    <!-- Image -->
                    <img src="<%= list.image.url %>" alt="<%= list.title %>" class="w-full h-48 object-cover">

                    <!-- Card Content -->
                    <div class="p-4 flex flex-col flex-1 justify-between">
                        <div>
                            <h2 class="text-xl font-bold text-blue-600 mb-2"><%= list.title %></h2>
                            <p class="text-gray-700 mb-4"><%= list.description %></p>
                        </div>

                        <div class="flex justify-between items-center mb-4">
                            <span class="text-green-600 font-semibold text-lg">â‚¹ <%= list.price %></span>
                            <span class="text-gray-500 text-sm"><%= list.location %>, <%= list.country %></span>
                        </div>

                        <a href="/listings/<%= list._id %>"
                           class="mt-auto inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500 transition-colors text-center">
                            View Details
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
