<%- layout('./layout/boilerplate.ejs') %>

<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-6 max-w-xl bg-white rounded shadow-md">
    <!-- Image -->
    <% if (foundlisting.image && foundlisting.image.url) { %>
      <img src="<%= foundlisting.image.url %>" alt="<%= foundlisting.title %>" 
           class="w-full h-64 object-cover rounded mb-4">
    <% } %>

    <!-- Listing Details -->
    <h1 class="text-2xl font-bold text-blue-600 mb-4"><%= foundlisting.title %></h1>
    <p class="text-gray-700 mb-2"><%= foundlisting.description %></p>

    <ul class="text-gray-800 mb-4 space-y-1">
      <li><span class="font-semibold">Price:</span> â‚¹ <%= foundlisting.price.toLocaleString('en-IN') %></li>
      <li><span class="font-semibold">Location:</span> <%= foundlisting.location %></li>
      <li><span class="font-semibold">Country:</span> <%= foundlisting.country %></li>
    </ul>

    <!-- Action Buttons -->
    <div class="flex space-x-4">
      <a href="/listings/<%= foundlisting._id %>/edit" 
         class="flex-1 text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500 transition-colors">
        Edit
      </a>
      <form action="/listings/<%= foundlisting._id %>?_method=DELETE" method="post" class="flex-1">
        <button type="submit" 
                class="w-full bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500 transition-colors">
          Delete
        </button>
      </form>
    </div>
  </div>
</body>
